<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="MyWay.Passport.Mobile.Pages.MainPage"
    IsBusy="{Binding IsBusy}"
    Title="Balance">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Card"
            Command="{Binding OpenSettingsSelected}" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <RefreshView
            IsRefreshing="{Binding IsBusy}"
            Command="{Binding RefreshBalanceSelected}">
            <ScrollView>
                <StackLayout
                    Margin="20"
                    Spacing="40"
                    Padding="0,0,0,50"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="Fill">
                    <Label
                        Text="{Binding CardDetails.LastBalance, StringFormat='${0:F2}'}"
                        FontSize="70"
                        HorizontalTextAlignment="Center" />

                    <Label
                        Text="{Binding ErrorMessage}"
                        HorizontalTextAlignment="Center"
                        TextColor="Red" />

                    <Label
                        Text="{Binding CardDetails.LastUpdated}"
                        HorizontalTextAlignment="Center"
                        TextColor="Gray"
                        IsVisible="True" />
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>
